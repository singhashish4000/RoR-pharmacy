<%= form_for(@middleware) do |f| %>
  <% if @middleware.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@middleware.errors.count, "error") %> prohibited this middleware from being saved:</h2>

      <ul>
      <% @middleware.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :product_id %><br>
    <%= f.collection_select :product_id, Product.all, :id, :name %>
  </div>
