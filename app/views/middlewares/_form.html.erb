    <%= f.label :quantity %><br>
    <%= f.text_field :quantity %>
  </div>
  <div class="field">
    <%= f.label :web_price %><br>
    <%= f.text_field :web_price %>
  </div>
  <div class="field">
    <%= f.label :web_price_desc %><br>
    <%= f.text_field :web_price_desc %>
  </div>
  <div class="field">
    <%= f.label :phone_price %><br>
    <%= f.text_field :phone_price %>
  </div>
  <div class="field">
    <%= f.label :phone_price_desc %><br>
    <%= f.text_field :phone_price_desc %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
