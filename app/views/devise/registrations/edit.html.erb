<div style='padding:10px'>
   <%= devise_error_messages! %>
   <div class="panel panel-default devise-bs">
    <div class="panel-heading" style='background-color:#B4FFBF'>
      <h4><%= t('.sign_up', default: 'Register') %></h4>
    </div>
    <div class="panel-body">    

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  
        <div class='form-row'>    
        <div class="form-group col-md-4">
          <%= f.label :title %><br />
          <%= select_tag "title_id", options_from_collection_for_select(Title.all, "id", "name"),class:'form-control' ,include_blank: 'Title'%> 
        </div>  

        <div class="field form-group col-md-4">
          <%= f.label :first_name %><br />
          <%= f.text_field :first_name, autocomplete: "first_name" , :class => 'form-control'%>
        </div>  

        <div class="field form-group col-md-4">
          <%= f.label :last_name %><br />
          <%= f.text_field :last_name, autocomplete: "last_name" , :class => 'form-control'%>
        </div>    
    </div>

      <div class="field form-group">
        <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'form-control' %>
      </div>     

        <div class="field form-group">
          <%= f.label :address %><br />
          <%= f.text_field :address, autocomplete: "address", :class => 'form-control' %>
        </div>      

        <div class="field form-group">
          <%= f.label :additional_address %><br />
          <%= f.text_field :additional_address, autocomplete: "address", :class => 'form-control' %>
        </div>        

  <div class='form-row'>          
        <div class="field form-group col-md-4">
          <%= f.label :city %><br />
          <%= f.text_field :city, autocomplete: "city", :class => 'form-control' %>
        </div>          

        <div class="field form-group col-md-4">
          <%= f.label :region %><br />
          <%= f.text_field :region, autocomplete: "region", :class => 'form-control' %>
        </div>            

        <div class="field form-group col-md-4">
          <%= f.label :postal_code %><br />
          <%= f.text_field :postal_code, autocomplete: "postal_code", :class => 'form-control' %>
        </div>              

        <div class="field form-group">
          <%= f.label :country %><br />
          <%= select_tag "country_id", options_from_collection_for_select(Country.all, "id", "name"),class:'form-control' ,include_blank: 'Country'%> 
        </div>    
     </div>      
        
        <div class="field form-group">
          <%= f.label :phone_number %><br />
          <%= f.text_field :phone_number, autocomplete: "phone_number", :class => 'form-control' %>
        </div>         

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field form-group">
          <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
          <%= f.password_field :password, autocomplete: "off" , :class => 'form-control'%>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>

        <div class="field form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control' %>
        </div>

        <div class="field form-group">
          <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
          <%= f.password_field :current_password, autocomplete: "off", :class => 'form-control' %>
        </div>

        <div class="actions">
          <%= f.submit "Update"  , :class => 'btn btn-primary btn-md'%>
        </div>
      <% end %>

</div>
</div>
</div>