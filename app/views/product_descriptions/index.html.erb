<div style='float:left' ,class='col-md-8'>
   <h2>All Product Description</h2>
</div>
<span style='float:right;margin-left:5px;font-weight:bold;margin-top:30px'>
  <u><%= link_to ' New Product Description', new_product_description_path, class: 'btn btn-primary fa fa-plus' %></u>
</span>  

<table class="table table-striped table-bordered" style='border:1px solid #ccc;width:100%'>
  <thead>
    <tr>
      <th>Id</th>
      <th>Desc</th>
      <th>Product</th>
      <th >Middleware</th>
      <th colspan="3" style='text-align:center'>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @product_descriptions.each do |product_desc| %>
      <tr>
        <td><%= product_desc.id %></td>
        <td><%= product_desc.desc %></td>
        <td><%= product_desc.product_id %></td>
        <td><%= product_desc.middleware_id %></td>
        <td style='text-align:center'><%= link_to ' Show', product_desc, class: 'btn btn-success btn-sm fa fa-eye' %></td>
        <td style='text-align:center'><%= link_to ' Edit', edit_product_description_path(product_desc), class: 'btn btn-primary btn-sm fa fa-pencil-square-o' %></td>
        <td style='text-align:center'><%= link_to ' Delete', product_desc, method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn btn-danger btn-sm fa fa-trash' %></td>
      </tr>
    <% end %>
  </tbody>
</table>


