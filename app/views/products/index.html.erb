<div style='float:left' ,class='col-md-8'>
  <h2 >All Products</h2>
</div>
<span style='float:right;margin-left:5px;font-weight:bold;margin-top:30px'>
  <u><%= link_to ' Create New Product', new_product_path, class: 'btn btn-primary fa fa-plus' %></u>
</span>  
<table class="table table-striped table-bordered col-sm-12" style='border:1px solid #ccc;width:100%'>
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Category</th>
      <th>Manufactors name</th>
      <th>Active Ingredient</th>
      <th colspan="3" style='text-align:center'>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= product.name %></td>
        <% if !product.category.nil? %>
           <td><%= product.category.name %></td>
        <% else %>
           <td><%= "" %></td>
        <% end %>   
        <td><%= product.manufactors_name %></td>
        <% if !product.active_ingredient.nil? %>
           <td><%= product.active_ingredient.name %></td>
        <% else %>
           <td><%= "" %></td>
        <% end %>   
        <td><%= link_to ' Show', product, class: 'btn btn-success btn-sm fa fa-eye'  %></td>
        <td><%= link_to ' Edit', edit_product_path(product) , class: 'btn btn-primary btn-sm fa fa-pencil-square-o'%></td>
        <td><%= link_to ' Delete', product, method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn btn-danger btn-sm fa fa-trash'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

