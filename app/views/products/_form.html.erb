    <%= f.label :call_price %><br>
    <%= f.text_field :call_price %>
  </div>
  <div class="field">
    <%= f.label :active_ingredient %><br>
    <%= f.collection_select :active_ingredient_id, ActiveIngredient.all, :id, :name %>
  </div>
  <div class="field">
    <%= f.label :category_id %><br>
    <%= f.collection_select :category_id, Category.all, :id, :name %>
  </div>
  <div class="field">
    <%= f.label :product_desc %><br>
    <%= f.text_field :product_desc %>
  </div>
  <div class="field">
    <%= f.label :manufactors_name %><br>
    <%= f.text_field :manufactors_name %>
  </div>
  <div class="field">
    <%= f.label :quantity %><br>
    <%= f.text_field :quantity %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
